{
  "name": "beefledger-asset-grouping",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "jest --runInBand",
    "build": "tsc",
    "contracts:build": "npm run contracts:clear && npm run contracts:compile && npm run contracts:type",
    "contracts:type": "typechain --target ethers-v4 --outDir ./src/types/ 'src/ethereum/abi/**/*.json'",
    "contracts:clear": "rm -rf ./src/ethereum/abi && rm -rf ./src/types",
    "contracts:compile": "cd src/ethereum && truffle compile",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run contracts:build && npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BeefLedger/erc20_asset_grouping.git"
  },
  "keywords": [
    "Beefledger",
    "Asset Grouping"
  ],
  "author": "Santiago Del Valle",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typechain": "^2.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.3.0",
    "@typechain/ethers-v4": "^4.0.0",
    "ethers": "^4.0.48"
  },
  "files": [
    "lib/**/*"
  ]
}
